# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Base Domain for Subdomain Routing (e.g., piqo.app)
# Storefronts will be accessible at handle.piqo.app
NEXT_PUBLIC_BASE_DOMAIN=piqo.app

# Enable subdomain routing (set to 'false' to use /u/handle format)
NEXT_PUBLIC_USE_SUBDOMAIN=true

# Application URL
NEXT_PUBLIC_APP_URL=https://piqo.app
